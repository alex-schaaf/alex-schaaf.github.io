---
layout: layouts/base.njk
---

<div class="posts">
  <h1>Articles</h1>
  {%- for post in collections.post | reverse -%}
  <div class="listing">
    <div class="title">
      <a href="{{ post.url }}">{{ post.data.title }}</a>
    </div>
    <div class="date">
      {{ post.date | readableDate }}</div>
  </div>
  {%- endfor -%}  
</div>